@model SignupVM
@{
    ViewData["Title"] = "Signup";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <section class="success-message">
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @TempData["SuccessMessage"]
                                    </div>
                                }
                            </section>

                            <h2 class="fw-bold mb-2 text-uppercase">Lägg till användare</h2>

                            <form asp-action="Signup">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Username" type="text" id="typeUsernameX" class="form-control form-control-lg" placeholder="Användarnamn" />
                                    <span asp-validation-for="Username"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" type="password" id="typePasswordX" class="form-control form-control-lg" placeholder="Lösenord" />
                                    <span asp-validation-for="Password"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="ConfirmPassword" type="password" id="typeConfirmPasswordX" class="form-control form-control-lg" placeholder="Bekräfta lösenord" />
                                    <span asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Lägg till">
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>