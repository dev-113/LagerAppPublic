@model StorageCheckVM

<table class="table table-striped table-bordered" id="scannedTable">
    <thead class="thead-dark">
        <tr>
            <th>Artikel Nummer</th>
            <th>Antal</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListProducts != null)
        {
            @foreach (var product in Model.ListProducts)
            {
                <tr>
                    <td>@product.ArticleNumber</td>
                    <td>@product.Quantity</td>
                    <td>
                        <form asp-action="DeleteListProduct" method="post">
                            <input type="hidden" name="articleNumber" value="@product.ArticleNumber" />
                            <div class="input-group">
                                <button type="submit" value="delete" class="btn btn-danger">X</button>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
